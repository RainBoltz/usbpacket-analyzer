{
  "compilerOptions": {
    "target": "es5",
    "sourceMap": true,
    "module":"CommonJS",
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@MyTypings": ["global/typings"],
      "@MyConstants": ["global/constants"],
      "@Helpers/*": ["helpers/*"]
    },
    "lib": [
      "dom",
      "es5",
      "es6",
      "es2017",
      "scripthost"
    ]
  },
  "includes": [
    "index.ts",
    "global/**/*.ts",
    "helpers/**/*.ts",
    "device-packet-details/**/*.ts"
  ]
}