{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@global/*": ["global/*"],
      "@helpers/*": ["helpers/*"]
    },
    "strict": true,
    "lib": [
        "dom",
        "es5",
        "scripthost",
        "es2015.promise",
        "es2015.iterable"
      ]
  },
  "includes": [
    "index.ts",
    "lib/**/*.ts"
  ]
}